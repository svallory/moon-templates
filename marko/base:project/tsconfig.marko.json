{
  "include": [
    "src/**/*",
    "types/**/*",
    "../../types/**/*"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": ".tsc/tsconfig.tsbuildinfo",
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom/vitest"
    ],
    "verbatimModuleSyntax": true,
  },
}